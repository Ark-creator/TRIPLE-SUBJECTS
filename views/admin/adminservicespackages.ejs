<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin</title>
    <link rel="icon" href="pics/logo.jpg">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <script src="https://kit.fontawesome.com/aed89df169.js" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Island+Moments&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        * { font-family: 'Poppins'; color: white; }
        body { background-color: #121212; margin: 0 auto; padding: 0; display: flex; }
        #sidebar { background-color: #262626; transition: transform 0.3s ease; position: absolute; left: 0; top: 0; bottom: 0; }
        .sidebar-hidden { transform: translateX(-100%); }
        .content { flex: 1; margin-left: 16rem; }
        .sidebar-hidden-content { margin-left: 0; }
        .modal { display: none; position: fixed; z-index: 50; left: 0; top: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.7); }
        .modal-content { background-color: #262626; margin: 15% auto; padding: 20px; width: 80%; border-radius: 5px; }
        .close { color: white; float: right; font-size: 28px; font-weight: bold; }
        .close:hover, .close:focus { color: #999; text-decoration: none; cursor: pointer; }
    </style>
</head>
<body>
    <div id="sidebar" class="w-64 h-screen bg-gray-800 text-white flex flex-col justify-between">
        <div>
            <div class="m-7 flex justify-center">
                <img class="rounded-full w-28" src="/assets/logo.jpg" alt="Logo">
            </div>
            <nav class="mt-10 border-t-4 border-yellow-500">
                <a href="/ark/admin" class="block py-4 px-5 rounded transition duration-200 hover:bg-gray-700 active:bg-yellow-500">
                    <i class="fa-solid fa-house mr-4"></i> Dashboard
                </a>
                <a href="/ark/admin/clients" class="block py-4 px-5 rounded transition duration-200 hover:bg-gray-700 active:bg-yellow-500">
                    <i class="fa-solid fa-users mr-4"></i> Clients
                </a>
                <a href="/ark/admin/bookings" class="block py-4 px-5 rounded transition duration-200 hover:bg-gray-700 active:bg-yellow-500">
                    <i class="fa-solid fa-calendar-days mr-4"></i> Bookings
                </a>
                <a href="/ark/admin/photo-management" class="block py-4 px-5 rounded transition duration-200 hover:bg-gray-700 active:bg-yellow-500">
                    <i class="fa-solid fa-image mr-4"></i> Photo Management
                </a>
                <a href="/ark/admin/adminservicespackages" class="block py-4 px-5 rounded transition duration-200 hover:bg-gray-700 active:bg-yellow-500">
                    <i class="fa-solid fa-box mr-4"></i> Service Packages
                </a>
            </nav>
        </div>
        <div>
            <a href="/ark/admin/logout" class="block py-4 px-5 rounded transition duration-200 hover:bg-red-600">
                <i class="fa-solid fa-sign-out-alt mr-2"></i> Logout
            </a>
        </div>
    </div>

    <main class="content">
        <button id="toggleSidebar" class="p-4 text-yellow-500"><i class="fa-solid fa-bars"></i></button>

        <!-- Service Management Section -->
        <div class="p-5">
            <h2 class="text-2xl font-semibold text-yellow-500">Service Management</h2>
            <button class="bg-green-500 text-white py-2 px-4 rounded mt-4" onclick="openServiceModal()">Add New Service</button>
            <table class="min-w-full bg-gray-800 border border-gray-800 mt-6">
                <thead>
                    <tr class="bg-gray-800">
                        <th class="py-2 px-4 border-b border-gray-600 text-left">Service Name</th>
                        <th class="py-2 px-4 border-b border-gray-600 text-left">Description</th>
                        <th class="py-2 px-4 border-b border-gray-600 text-left">Actions</th>
                    </tr>
                </thead>
                <tbody id="serviceTable">
                    <!-- Placeholder content for services -->
                    <tr class="odd:bg-gray-700 even:bg-gray-800">
                        <td class="py-2 px-4 border-b border-gray-600">Self-Portrait</td>
                        <td class="py-2 px-4 border-b border-gray-600">Create digital portraits by yourself.</td>
                        <td class="py-2 px-4 border-b border-gray-600">
                            <button class="bg-blue-500 text-white py-1 px-2 rounded" onclick="openServiceModal()">Edit</button>
                            <button class="bg-red-500 text-white py-1 px-2 rounded" onclick="alert('Delete Service')">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Package Management Section -->
        <div class="p-5">
            <h2 class="text-2xl font-semibold text-yellow-500">Package Management</h2>
            <button class="bg-green-500 text-white py-2 px-4 rounded mt-4" onclick="openAddPackageModal()">Add New Package</button>
            <table class="min-w-full bg-gray-800 border border-gray-800 mt-6">
                <thead>
                    <tr class="bg-gray-800">
                        <th class="py-2 px-4 border-b border-gray-600 text-left">Service</th>
                        <th class="py-2 px-4 border-b border-gray-600 text-left">Package</th>
                        <th class="py-2 px-4 border-b border-gray-600 text-left">Duration</th>
                        <th class="py-2 px-4 border-b border-gray-600 text-left">Price</th>
                        <th class="py-2 px-4 border-b border-gray-600 text-left">Description</th>
                        <th class="py-2 px-4 border-b border-gray-600 text-left">Actions</th>
                    </tr>
                </thead>
                <tbody id="packageTable">
                    <!-- Placeholder content for packages -->
                    <tr class="odd:bg-gray-700 even:bg-gray-800">
                        <td class="py-2 px-4 border-b border-gray-600">Self-Portrait</td>
                        <td class="py-2 px-4 border-b border-gray-600">Basic Package</td>
                        <td class="py-2 px-4 border-b border-gray-600">30 mins</td>
                        <td class="py-2 px-4 border-b border-gray-600">â‚±299</td>
                        <td class="py-2 px-4 border-b border-gray-600">Unlimited shots with enhanced photos.</td>
                        <td class="py-2 px-4 border-b border-gray-600">
                            <button class="bg-blue-500 text-white py-1 px-2 rounded" onclick="openAddPackageModal()">Edit</button>
                            <button class="bg-red-500 text-white py-1 px-2 rounded" onclick="alert('Delete Package')">Delete</button>
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Service Modal -->
        <div id="serviceModal" class="modal">
            <div class="modal-content bg-gray-800 p-5 rounded-lg shadow-lg">
                <span class="close text-red-500 cursor-pointer" onclick="closeServiceModal()">&times;</span>
                <h2 class="text-yellow-500 font-semibold text-2xl mb-4" id="service                ModalTitle">Add Service</h2>
                <form id="serviceForm" onsubmit="event.preventDefault(); alert('Service Saved!'); closeServiceModal();">
                    <input type="hidden" id="serviceId">
                    <div class="mb-4">
                        <label class="text-yellow-500">Service Name</label>
                        <input type="text" id="serviceName" class="w-full bg-gray-700 text-white py-2 px-4 rounded" required>
                    </div>
                    <div class="mb-4">
                        <label class="text-yellow-500">Description</label>
                        <textarea id="serviceDescription" class="w-full bg-gray-700 text-white py-2 px-4 rounded" required></textarea>
                    </div>
                    <button type="submit" class="bg-green-500 text-white py-2 px-4 rounded">Save</button>
                </form>
            </div>
        </div>

        <!-- Package Modal -->
        <div id="packageModal" class="modal">
            <div class="modal-content bg-gray-800 p-5 rounded-lg shadow-lg">
                <span class="close text-red-500 cursor-pointer" onclick="closePackageModal()">&times;</span>
                <h2 class="text-yellow-500 font-semibold text-2xl mb-4" id="modalTitle">Add Package</h2>
                <form id="packageForm" onsubmit="event.preventDefault(); alert('Package Saved!'); closePackageModal();">
                    <input type="hidden" id="packageId">
                    <div class="mb-4">
                        <label class="text-yellow-500">Service Type</label>
                        <select id="serviceType" class="w-full bg-gray-700 text-white py-2 px-4 rounded">
                            <option value="1">Self-Portrait</option>
                            <option value="2">Shoot with Professional</option>
                        </select>
                    </div>
                    <div class="mb-4">
                        <label class="text-yellow-500">Package Name</label>
                        <input type="text" id="packageName" class="w-full bg-gray-700 text-white py-2 px-4 rounded" required>
                    </div>
                    <div class="mb-4">
                        <label class="text-yellow-500">Duration</label>
                        <input type="number" id="packageDuration" class="w-full bg-gray-700 text-white py-2 px-4 rounded" required>
                    </div>
                    <div class="mb-4">
                        <label class="text-yellow-500">Price</label>
                        <input type="number" id="packagePrice" class="w-full bg-gray-700 text-white py-2 px-4 rounded" required>
                    </div>
                    <div class="mb-4">
                        <label class="text-yellow-500">Description</label>
                        <textarea id="packageDescription" class="w-full bg-gray-700 text-white py-2 px-4 rounded" required></textarea>
                    </div>
                    <button type="submit" class="bg-green-500 text-white py-2 px-4 rounded">Save</button>
                </form>
            </div>
        </div>
    </main>

    <script>
        // Sidebar toggle function
        document.getElementById('toggleSidebar').addEventListener('click', () => {
            document.getElementById('sidebar').classList.toggle('sidebar-hidden');
            document.querySelector('.content').classList.toggle('sidebar-hidden-content');
        });

        // Functions to open/close service modal
        const openServiceModal = () => document.getElementById('serviceModal').style.display = 'block';
        const closeServiceModal = () => document.getElementById('serviceModal').style.display = 'none';

        // Functions to open/close package modal
        const openAddPackageModal = () => {
            document.getElementById('packageForm').reset();
            document.getElementById('packageModal').style.display = 'block';
        };
        const closePackageModal = () => document.getElementById('packageModal').style.display = 'none';
    </script>
</body>
</html>

